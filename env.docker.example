# Docker Environment Variables для Positive Support Bot
# Скопируйте этот файл в .env и заполните значения

# Telegram Bot Token
BOT_TOKEN=your_bot_token_here

# API Configuration
BACKEND_URL=http://api:8000

# Database Configuration (для Docker)
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=8998
DB_NAME=support_bot

# Environment
ENVIRONMENT=production
LOG_LEVEL=INFO

# GitHub Configuration (для CI/CD)
GITHUB_TOKEN=your_github_token
DEPLOY_HOST=your_server_host
DEPLOY_USER=your_deploy_user
